---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Menu from 'src/components/Menu.astro';
import Footer from '@components/Footer.astro';
import { siteConfig } from '@utils/Config';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href=`${siteConfig.basepath}favicon.ico` />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ViewTransitions />
        <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    </head>
    <body class="bg-gray-900 text-teal-50">
        <Menu />
        <main class="mb-10 max-w-7xl m-auto p-2">
            <slot />
        </main>
        <Footer />
        <script>
            import AOS from 'aos'; // Importa AOS desde el paquete instalado

            const handlePageLoad = () => {
                AOS.init(); // Inicializa AOS
            };

            document.addEventListener("astro:page-load", handlePageLoad);
        </script>
    </body>
</html>

